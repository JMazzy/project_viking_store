<h1 class="text-center">Viking Store Admin Portal</h1>

<div class='row'>

  <div class='col-md-3'>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Navigation Options</h3>
      </div>
      <div class="panel-body">
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation"><%= link_to "Users", admin_path %></li>
          <li role="presentation"><%= link_to "Addresses", admin_path %></li>
          <li role="presentation"><%= link_to "Orders", admin_path %></li>
          <li role="presentation"><%= link_to "Products", admin_path %></li>
          <li role="presentation"><%= link_to "Categories", admin_path %></li>
          <hr>
          <li role="presentation"><%= link_to "Analytics Dashboard", admin_path %></li>
        </ul>
      </div>
    </div>

  </div>

  <div class='col-md-9'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">
          Product Categories
        </div>
      </div>
      <div class="panel-body">
        <%= flash_messages %>

        <%= link_to "Add a New Category", new_category_path, class: "btn btn-primary btn-lg btn-block"%>
        <br>
        <table class="table table-striped">
          <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
          </thead>
          <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td><%= link_to "Show", category %></td>
              <td><%= link_to "Edit" %></td>
              <td><%= link_to "Delete" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
