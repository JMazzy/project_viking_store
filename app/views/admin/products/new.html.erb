<% content_for :resource_name, "Products" %>

<h1 class="text-center">New Category</h1>

<div class="row">
  <div class="col-sm-12">
    <%= flash_messages %>
    <%= form_for [:admin,@product] do |f| %>
      <div class="form-group">
        <%= f.label :id, "ID" %>
        <%= f.text_field :id, class: 'form-control', placeholder: "N/A", disabled: true %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :sku %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :category %>
        <%= f.collection_select :category, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
