<%= render template: "layouts/public" %>
<div class="row">
  <div class="col-md-4 col-md-offset-8">
    <%= "Category Filter: #{category_name(params[:product_category])}" %>
    <%= form_for :product_category, url: products_path, html: { method: 'GET' } do |f| %>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "All"}, {}) %>

      <%= f.submit "Apply Filter" %>
    <% end %>
  </div>
</div>

<div class="row">
  <% products = category_filter(params[:product_category]) %>
  <% products.each do |product| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title text-center">
            <%= link_to "#{product.name}", product_path(product) %>
          </h4>
        </div>
        <div class="panel-body">
          Product picture goes here...
        </div>
        <div class="panel-footer">
          <%= form_for :shopping_cart do |f| %>
            <%= f.submit "Add to Cart" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Panel title</h3>
  </div>
  <div class="panel-body">
    Panel content
  </div>
  <div class="panel-footer">
    <%= form_for product do |f| %>
      <%= f.submit "Add to Cart" %>
    <% end %>
  </div>
</div>
